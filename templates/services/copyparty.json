{
  "name": "copyparty-service",
  "description": "Copyparty file sharing service",
  "commands": {
    "install": [
      "docker pull copyparty/ac:latest"
    ],
    "setup": [
      "mkdir -p ~/wsconf",
      "mkdir -p ~/wsdata/copyparty"
    ],
    "run": "docker run -d --name copyparty --network {{networkName}} -p 3923:3923 -v ~/wsdata/copyparty:/w -v ~/wsconf:/cfg copyparty/ac:latest"
  },
  "variables": ["networkName", "domain"],
  "ports": ["3923:3923"],
  "volumes": [
    "~/wsdata/copyparty:/w",
    "~/wsconf:/cfg"
  ],
  "accessUrl": "https://files.{{domain}}",
  "dependencies": [],
  "isCore": true
}