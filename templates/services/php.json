{
  "name": "FrankenPHP",
  "description": "Modern PHP app server with Caddy built-in",
  "commands": {
    "install": [
      "docker pull dunglas/frankenphp:latest"
    ],
    "setup": [
      "docker network create {{NETWORK_NAME}} || true",
      "mkdir -p ~/wsdata/frankenphp/public",
      "mkdir -p ~/wsconf/frankenphp"
    ],
    "run": "docker run -d --name frankenphp --network {{NETWORK_NAME}} -p 8081:80 -p 8443:443 -v ~/wsdata/frankenphp/public:/app/public -v ~/wsconf/frankenphp:/etc/caddy -e SERVER_NAME=:80 dunglas/frankenphp:latest"
  },
  "variables": ["NETWORK_NAME"],
  "dependencies": [],
  "accessUrl": "http://{{IP}}:8081"
}
