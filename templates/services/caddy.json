{
  "name": "caddy-service",
  "description": "Caddy reverse proxy service",
  "commands": {
    "install": [
      "docker pull caddy:latest"
    ],
    "setup": [
      "mkdir -p ~/wsconf",
      "mkdir -p ~/wsdata/caddy"
    ],
    "run": "docker run -d --name caddy --network {{NETWORK_NAME}} -p 80:80 -p 443:443 -v ~/wsconf/Caddyfile:/etc/caddy/Caddyfile -v ~/wsdata/caddy:/data caddy:latest"
  },
  "variables": ["NETWORK_NAME"],
  "ports": ["80:80", "443:443"],
  "volumes": [
    "~/wsconf/Caddyfile:/etc/caddy/Caddyfile",
    "~/wsdata/caddy:/data"
  ],
  "configFiles": ["Caddyfile"],
  "accessUrl": "https://{{DOMAIN}}",
  "dependencies": [],
  "isCore": true
}