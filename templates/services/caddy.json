{
  "name": "caddy-service",
  "description": "Caddy reverse proxy service",
  "image": "caddy:latest",
  "commands": {
    "install": [
      "docker pull caddy:latest"
    ],
    "setup": [
      "mkdir -p /opt/caddy/config",
      "mkdir -p /opt/caddy/data"
    ],
    "run": "docker run -d --name caddy --network {{networkName}} -p 80:80 -p 443:443 -v /opt/caddy/config/Caddyfile:/etc/caddy/Caddyfile -v /opt/caddy/data:/data caddy:latest"
  },
  "variables": ["networkName"],
  "ports": ["80:80", "443:443"],
  "volumes": [
    "/opt/caddy/config/Caddyfile:/etc/caddy/Caddyfile",
    "/opt/caddy/data:/data"
  ],
  "configFiles": ["Caddyfile"],
  "accessUrl": "https://{{domain}}",
  "dependencies": [],
  "isCore": true
}