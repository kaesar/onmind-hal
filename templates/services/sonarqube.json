{
  "name": "SonarQube CE",
  "description": "Code quality and security analysis platform",
  "commands": {
    "install": [
      "docker pull sonarqube:community"
    ],
    "setup": [
      "docker network create {{NETWORK_NAME}} || true",
      "mkdir -p ~/wsdata/sonarqube/data",
      "mkdir -p ~/wsdata/sonarqube/extensions",
      "mkdir -p ~/wsdata/sonarqube/logs"
    ],
    "run": "docker run -d --name sonarqube --network {{NETWORK_NAME}} -p 9002:9000 -v ~/wsdata/sonarqube/data:/opt/sonarqube/data -v ~/wsdata/sonarqube/extensions:/opt/sonarqube/extensions -v ~/wsdata/sonarqube/logs:/opt/sonarqube/logs -e SONAR_ES_BOOTSTRAP_CHECKS_DISABLE=true sonarqube:community"
  },
  "variables": ["NETWORK_NAME"],
  "dependencies": []
}
