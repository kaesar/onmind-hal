{
  "name": "Kroki",
  "description": "API for generating diagrams (PlantUML, Mermaid, GraphViz, etc.)",
  "commands": {
    "install": [
      "docker pull yuzutech/kroki:latest"
    ],
    "setup": [
      "docker network create {{NETWORK_NAME}} || true"
    ],
    "run": "docker run -d --name kroki --network {{NETWORK_NAME}} -p 8086:8000 --restart unless-stopped yuzutech/kroki:latest"
  },
  "variables": ["NETWORK_NAME"],
  "dependencies": []
}
