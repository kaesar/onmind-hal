{
  "name": "Excalidraw",
  "description": "Virtual whiteboard for sketching diagrams",
  "commands": {
    "install": [
      "docker pull excalidraw/excalidraw:latest"
    ],
    "setup": [
      "docker network create {{NETWORK_NAME}} || true"
    ],
    "run": "docker run -d --name excalidraw --network {{NETWORK_NAME}} -p 8081:80 excalidraw/excalidraw:latest"
  },
  "variables": ["NETWORK_NAME"],
  "dependencies": []
}
