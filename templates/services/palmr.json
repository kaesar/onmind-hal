{
  "name": "Palmr",
  "description": "File sharing platform like WeTransfer",
  "commands": {
    "install": [
      "docker pull ghcr.io/kyantech/palmr:latest"
    ],
    "setup": [
      "docker network create {{NETWORK_NAME}} || true",
      "mkdir -p ~/wsdata/palmr/data"
    ],
    "run": "docker run -d --name palmr --network {{NETWORK_NAME}} -p 3000:3000 -v ~/wsdata/palmr/data:/app/data -e NODE_ENV=production ghcr.io/kyantech/palmr:latest"
  },
  "variables": ["NETWORK_NAME"],
  "dependencies": []
}
